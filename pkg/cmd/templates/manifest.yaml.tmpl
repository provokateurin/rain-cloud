apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ "{{ include \"rain-cloud.fullname\" . }}" }}-{{ .KubernetesID }}
  labels:
    {{ "{{- include \"rain-cloud.labels\" . | nindent 4 }}" }}
spec:
  selector:
    matchLabels:
      app: {{ .ID }}
      {{ "{{- include \"rain-cloud.selectorLabels\" . | nindent 6 }}" }}
  template:
    metadata:
      labels:
        app: {{ .ID }}
        {{ "{{- include \"rain-cloud.selectorLabels\" . | nindent 8 }}" }}
    spec:
      containers:
        - name: {{ .KubernetesID }}
          image: "{{ "{{ .Values." }}{{ .ID }}{{ ".image }}" }}"
          ports:
            - containerPort: 8000

---

apiVersion: v1
kind: Service
metadata:
  name: {{ .KubernetesID }}
spec:
  selector:
    app: {{ .ID }}
  ports:
    - port: 8000
      targetPort: 8000
